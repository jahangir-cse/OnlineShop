

@{
    ViewData["Title"] = "Contact";
}
<br />
<!--Header-->
<section id="background" class="py-5 text-center text-light">
    <div class="dark-overlay">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h3>Contact Us</h3>
                    <p class="lead">Gears are used for transmitting power from one part of a machine to another. In a bicycle, for example, it's gears that take power from the pedals to the back wheel</p>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<section id="background" class="text-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="~/images/map1.jpg" class="img-fluid" style="width:100%;height:100%;" />
            </div>
            <div class="col-md-6">
                <form>
                    <div class="container">
                        <label>Full Name</label>
                        <input type="text" class="form-control" placeholder="Your name..">
                    </div>
                    <div class="container">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="Your email..">
                    </div>
                    <div class="container">
                        <label>Mobile Number</label>
                        <input type="number" class="form-control" placeholder="Your mobile number..">
                    </div>
                    <div class="container">
                        <label>Country</label>
                        <select class="form-control">
                            <option value="australia">Australia</option>
                            <option value="canada">Canada</option>
                            <option value="usa">USA</option>
                        </select>
                    </div>
                    <div class="container">
                        <label>Subject</label>
                        <textarea class="form-control" placeholder="Write something.." style="height:130px"></textarea>
                    </div>
                    <div class="container">
                        <input type="submit" value="Submit" class="btn btn-success">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<br />
