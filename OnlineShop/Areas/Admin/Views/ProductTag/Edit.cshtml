@model OnlineShop.Models.ProductTags
@{
    ViewData["Title"] = "Edit";
}
<br />
<div class="container my-5 py-5" style="background: #f7f2d7;">
    <h2 class="text-info">Edit Product Tag</h2>
    <form asp-action="Edit" method="post">
        <div class="p-4 rounded border">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group">
                <div>
                    <label asp-for="ProductTag"></label>
                </div>
                <div>
                    <input asp-for="ProductTag" class="form-control shadow rounded" />
                </div>
                <span asp-validation-for="ProductTag" class="text-danger"></span>
                <br /><br />
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>
    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

