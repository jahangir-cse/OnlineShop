@model OnlineShop.Areas.Admin.Models.RoleUserVm
@{
    ViewData["Title"] = "Assign";
}
<br />
<div class="container my-5 py-5" style="background: #f7f2d7;">
    <h2 class="text-info">Assign Role</h2>
    <form asp-action="Assign" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <h3>@ViewBag.mgs</h3>
            <div class="form-group">
                <div>
                    <label asp-for="UserId"></label>
                </div>
                <div>
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control shadow rounded"></select>
                    @*<input asp-for="ProductTypeId" class="form-control" />*@
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="RoleId"></label>
                </div>
                <div>
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control shadow rounded"></select>
                    @*<input asp-for="ProductTagId" class="form-control" />*@
                </div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Assign" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
    </div>
    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

